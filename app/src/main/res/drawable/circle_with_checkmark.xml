<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#3A9B79"/>
            <size
                android:width="20dp"
                android:height="20dp"/>
        </shape>
    </item>

    <item
        android:width="6dp"
        android:height="2dp"
        android:top="6dp"
        android:right="4.5dp"
        android:gravity="center">
        <rotate
            android:fromDegrees="40">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorWhite"/>
            </shape>
        </rotate>
    </item>

    <item
        android:width="10dp"
        android:height="2dp"
        android:left="6dp"
        android:top="0dp"
        android:gravity="center"
        >
        <rotate
            android:fromDegrees="-50">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorWhite"/>
            </shape>
        </rotate>
    </item>

    <item
        android:width="20dp"
        android:height="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

</layer-list>