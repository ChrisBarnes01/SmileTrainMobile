<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeCardConstrainLayout"
        android:layout_gravity="top"
        android:background="@drawable/home_total_background"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="Hola,"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toTopOf="@+id/main_activity_title"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <TextView
            android:id="@+id/main_activity_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="Nombre de Usuario"
            android:textColor="@color/colorWhite"
            app:layout_constraintStart_toEndOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <androidx.cardview.widget.CardView
            android:id="@+id/view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"

            android:elevation="12dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <ImageView
                android:id="@+id/circleImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/hello" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@+id/welcomeCardConstrainLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <!--First Card-->
        <androidx.cardview.widget.CardView
            android:id="@+id/home_check_in_card"
            style="@style/CardView.Light"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="50dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="24dp"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/dropdown_title"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="¿Cómo está tu salud hoy?"
                     />
                <Button
                    android:id="@+id/home_check_in_card_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="12dp"
                    app:autoSizeTextType="uniform"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorPrimary"
                    android:text="reporte"
                    android:maxLines="1"
                    android:scrollHorizontally="false"
                    android:layout_weight="1"
                   />



            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!--Second Card!!-->
        <androidx.cardview.widget.CardView
            android:id="@+id/home_calendar_card"
            style="@style/CardView.Light"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="50dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/first_level"
                    android:paddingTop="12dp"
                    android:paddingBottom="2dp">

                    <TextView
                        android:id="@+id/homepage_date_label"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        app:layout_constraintHorizontal_weight="3"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp"
                        android:textSize="50sp"
                        android:textColor="@color/colorBackground"
                        android:text="24th"
                        app:layout_constraintEnd_toStartOf="@+id/first_level_left"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/first_level_left"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintHorizontal_weight="5"
                        android:orientation="vertical"
                        android:layout_marginRight="12dp"
                        app:layout_constraintBottom_toBottomOf="@id/homepage_date_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        >

                        <TextView
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:text="Wednesday"
                            android:textSize="16dp"
                            android:id="@+id/homepage_day_of_week_label"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/homepage_month_and_year_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:text="August 2020" />
                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mid_level"
                    android:paddingTop="2dp"
                    android:orientation="horizontal"
                    android:paddingBottom="2dp">

                    <ImageView
                        android:id="@+id/home_calendar_image"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:layout_width="50dp"
                        android:layout_height="54dp"
                        android:layout_marginStart="12dp"
                        android:tint="@color/colorPrimary"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/ic_baseline_perm_contact_calendar_24"
                        app:layout_constraintEnd_toStartOf="@+id/home_calendar_appointment_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/home_calendar_appointment_label"
                        android:layout_width="fill_parent"
                        android:layout_height="61dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginStart="30dp"
                        android:textSize="16dp"
                        android:text=""
                        app:layout_constraintBottom_toBottomOf="@id/home_calendar_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/home_check_in_record_view"
                    android:paddingTop="2dp"
                    android:paddingBottom="24dp"
                    android:weightSum="7"
                    >

                </LinearLayout>









            </LinearLayout>
        </androidx.cardview.widget.CardView>









        <androidx.cardview.widget.CardView
            android:id="@+id/home_day_reminder_card"
            style="@style/CardView.Light"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="50dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/home_day_reminder_card_text"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                app:layout_constraintEnd_toStartOf="@+id/home_check_in_card_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/today_is_day_card"
            style="@style/CardView.Light"
            android:elevation="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:paddingBottom="50dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="24dp"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingBottom="24dp">

                <TextView
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:text="Enviar fotos de alineadores hoy."
                    />
                <Button
                    android:id="@+id/today_is_day_button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="12dp"
                    app:autoSizeTextType="uniform"
                    android:layout_marginRight="12dp"
                    android:background="@color/colorPrimary"
                    android:text="Enviar"
                    android:maxLines="1"
                    android:scrollHorizontally="false"
                    android:layout_weight="1"
                    />



            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
    </ScrollView>






    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation_menu" />
</RelativeLayout>

