<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="150dp"
    android:layout_marginTop="150dp"
    android:background="@drawable/corner_radius_background"
    android:padding="30dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textTitleCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="12dp"
        android:textColor="#000000"
        android:text="Hello Welcome to the App"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textDescriptionCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="6dp"
        android:paddingBottom="12dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="input1"
        />

    <TextView
        android:paddingTop="12dp"
        android:id="@+id/inputText1CreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="input1"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/input1CreateAccount"
        android:layout_width="match_parent"
        android:hint="username"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/inputText2CreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="input2"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/input2CreateAccount"
        android:layout_width="match_parent"
        android:hint="username"

        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/inputText3CreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="input3"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/input3CreateAccount"
        android:hint="username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>