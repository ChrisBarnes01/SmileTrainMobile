<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/overallLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="150dp"
    android:layout_marginTop="150dp"
    android:background="@drawable/corner_radius_background"
    android:padding="30dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textTitleCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="12dp"
        android:textColor="#000000"
        android:text="Hello Welcome to the App"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textDescriptionCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="6dp"
        android:paddingBottom="12dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="input1"
        />

    <TextView
        android:paddingTop="12dp"
        android:id="@+id/inputText1CreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="input1"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/input1CreateAccount"
        android:layout_width="match_parent"
        android:hint="username"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/inputText2CreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="input2"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/input2CreateAccount"
        android:layout_width="match_parent"
        android:hint="username"

        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/inputText3CreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="input3"
        android:gravity="left"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/input3CreateAccount"
        android:hint="username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@id/imageSelectors"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elige una imagen"
            android:textColor="@color/colorBlack"
            android:textSize="12dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"></TextView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="12dp"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:clickable="true"
                android:id="@+id/view1"
                app:cardCornerRadius="25dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.0">
                <ImageView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView1"
                    android:src="@drawable/icon_1"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="12dp"
                android:clickable="true"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="25dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.0">
                <ImageView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView2"
                    android:src="@drawable/icon_2"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="12dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_margin="12dp"
                android:id="@+id/view3"
                app:cardCornerRadius="25dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.0">
                <ImageView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView3"
                    android:src="@drawable/icon_3"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="12dp"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:id="@+id/view4"
                app:cardCornerRadius="25dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.0">
                <ImageView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView4"
                    android:src="@drawable/icon_4"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/imageSelectors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="12dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_margin="12dp"
                android:id="@+id/view5"
                app:cardCornerRadius="25dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.0">
                <ImageView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView5"
                    android:src="@drawable/icon_5"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:elevation="12dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:id="@+id/view6"
                android:layout_weight="1"
                app:cardCornerRadius="25dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.0">
                <ImageView
                    android:layout_height="100dp"
                    android:layout_width="match_parent"
                    android:id="@+id/imageView6"
                    android:src="@drawable/icon_6"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>