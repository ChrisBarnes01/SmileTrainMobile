<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aletify.smiletrainmobiletwo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.aletify.smiletrainmobiletwo.LoginActivity2"></activity>
        <activity android:name="com.aletify.smiletrainmobiletwo.CameraActivity4" />
        <activity
            android:name="com.aletify.smiletrainmobiletwo.MainSequence"
            android:label="@string/title_activity_main_sequence"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aletify.smiletrainmobiletwo.CameraActivity2"
            android:label="@string/title_activity_camera2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- android:screenOrientation="portrait" -->
        <activity
            android:name="com.aletify.smiletrainmobiletwo.MainFlowActivity"
            android:label="@string/title_activity_main_flow"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aletify.smiletrainmobiletwo.CheckIn"
            android:label="@string/title_activity_check_in"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aletify.smiletrainmobiletwo.IntroductorySequence"
            android:label="@string/title_activity_introductory_sequence"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.aletify.smiletrainmobiletwo.MainActivity2" />
        <activity
            android:name="com.aletify.smiletrainmobiletwo.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


</manifest>